<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SeaJets Scraper - Results</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.replit.com/agent/bootstrap-agent-dark-theme.min.css" rel="stylesheet">
    
    <!-- DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css">
    
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="{{ url_for('static', filename='css/custom.css') }}">
</head>
<body>
    <div class="container my-5">
        <div class="row mb-4">
            <div class="col-12 text-center">
                <h1 class="display-4">
                    <i class="fas fa-ship me-3"></i>SeaJets Scraper
                </h1>
                <p class="lead text-muted">Results for Piraeus to Milos Route</p>
            </div>
        </div>
        
        <div class="row mb-3">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center">
                    <h2>Scraped Data</h2>
                    <div>
                        <a href="/" class="btn btn-outline-secondary me-2">
                            <i class="fas fa-redo me-1"></i> New Search
                        </a>
                        <button id="export-csv" class="btn btn-success me-2">
                            <i class="fas fa-file-csv me-1"></i> Export CSV
                        </button>
                        <button id="export-excel" class="btn btn-primary">
                            <i class="fas fa-file-excel me-1"></i> Export Excel
                        </button>
                    </div>
                </div>
                <hr>
            </div>
        </div>
        
        <!-- Itineraries Table -->
        <div class="row mb-5">
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary bg-opacity-25">
                        <h5 class="mb-0">
                            <i class="fas fa-route me-2"></i>Itineraries
                        </h5>
                    </div>
                    <div class="card-body">
                        {% if itineraries and itineraries|length > 0 %}
                        <div class="table-responsive">
                            <table id="itineraries-table" class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Vessel</th>
                                        <th>Departure Time</th>
                                        <th>Arrival Time</th>
                                        <th>Duration</th>
                                        <th>Price</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for itinerary in itineraries %}
                                    <tr>
                                        <td>{{ itinerary.Date }}</td>
                                        <td>{{ itinerary.Vessel }}</td>
                                        <td>{{ itinerary["Departure Time"] }}</td>
                                        <td>{{ itinerary["Arrival Time"] }}</td>
                                        <td>{{ itinerary.Duration }}</td>
                                        <td>{{ itinerary.Price }}</td>
                                        <td>
                                            {% if itinerary.Available %}
                                            <span class="badge bg-success">Available</span>
                                            {% else %}
                                            <span class="badge bg-secondary">Unavailable</span>
                                            {% endif %}
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        {% else %}
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle me-2"></i>No itineraries found for the selected date range.
                        </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Seat Availability Table -->
        <div class="row mb-5">
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary bg-opacity-25">
                        <h5 class="mb-0">
                            <i class="fas fa-chair me-2"></i>Seat Availability
                        </h5>
                    </div>
                    <div class="card-body">
                        {% if seats and seats|length > 0 %}
                        <div class="table-responsive">
                            <table id="seats-table" class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Vessel</th>
                                        <th>Departure Time</th>
                                        <th>Seat Type</th>
                                        <th>Available Seats</th>
                                        <th>Total Seats</th>
                                        <th>Percentage Full</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for seat in seats %}
                                    <tr>
                                        <td>{{ seat.Date }}</td>
                                        <td>{{ seat.Vessel }}</td>
                                        <td>{{ seat["Departure Time"] }}</td>
                                        <td>{{ seat["Seat Type"] }}</td>
                                        <td>{{ seat["Available Seats"] }}</td>
                                        <td>{{ seat["Total Seats"] }}</td>
                                        <td>
                                            <div class="progress">
                                                {% set percentage = ((seat["Total Seats"] - seat["Available Seats"]) / seat["Total Seats"] * 100)|round|int %}
                                                <div class="progress-bar {% if percentage > 90 %}bg-danger{% elif percentage > 70 %}bg-warning{% else %}bg-success{% endif %}" 
                                                     role="progressbar" 
                                                     style="width: {{ percentage }}%;" 
                                                     aria-valuenow="{{ percentage }}" 
                                                     aria-valuemin="0" 
                                                     aria-valuemax="100">
                                                    {{ percentage }}%
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        {% else %}
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle me-2"></i>No seat availability data found for the selected date range.
                        </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    
    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- DataTables JS -->
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>
    
    <!-- Custom JS -->
    <script>
        $(document).ready(function() {
            // Initialize DataTables
            if ($('#itineraries-table tbody tr').length > 0) {
                $('#itineraries-table').DataTable({
                    responsive: true,
                    order: [[0, 'asc'], [2, 'asc']]
                });
            }
            
            if ($('#seats-table tbody tr').length > 0) {
                $('#seats-table').DataTable({
                    responsive: true,
                    order: [[0, 'asc'], [1, 'asc']]
                });
            }
            
            // Export CSV functionality
            $('#export-csv').on('click', function() {
                $.ajax({
                    url: '/export_csv',
                    method: 'POST',
                    success: function(response) {
                        // Create download links for itineraries CSV
                        if (response.itineraries_csv) {
                            const itinerariesBlob = new Blob([response.itineraries_csv], { type: 'text/csv' });
                            const itinerariesUrl = window.URL.createObjectURL(itinerariesBlob);
                            const itinerariesLink = document.createElement('a');
                            itinerariesLink.href = itinerariesUrl;
                            itinerariesLink.setAttribute('download', `${response.filename_prefix}_itineraries.csv`);
                            document.body.appendChild(itinerariesLink);
                            itinerariesLink.click();
                            document.body.removeChild(itinerariesLink);
                        }
                        
                        // Create download links for seats CSV
                        if (response.seats_csv) {
                            const seatsBlob = new Blob([response.seats_csv], { type: 'text/csv' });
                            const seatsUrl = window.URL.createObjectURL(seatsBlob);
                            const seatsLink = document.createElement('a');
                            seatsLink.href = seatsUrl;
                            seatsLink.setAttribute('download', `${response.filename_prefix}_seats.csv`);
                            document.body.appendChild(seatsLink);
                            seatsLink.click();
                            document.body.removeChild(seatsLink);
                        }
                    },
                    error: function(error) {
                        console.error("Error exporting CSV:", error);
                        alert("Error exporting CSV. Please try again.");
                    }
                });
            });
            
            // Export Excel functionality
            $('#export-excel').on('click', function() {
                $.ajax({
                    url: '/export_csv',
                    method: 'POST',
                    success: function(response) {
                        // Create download link for Excel file
                        if (response.excel_data) {
                            const byteCharacters = atob(response.excel_data);
                            const byteNumbers = new Array(byteCharacters.length);
                            for (let i = 0; i < byteCharacters.length; i++) {
                                byteNumbers[i] = byteCharacters.charCodeAt(i);
                            }
                            const byteArray = new Uint8Array(byteNumbers);
                            const excelBlob = new Blob([byteArray], { type: 'application/vnd.openxmlformats-officedocument.spreadsheetml.sheet' });
                            const excelUrl = window.URL.createObjectURL(excelBlob);
                            const excelLink = document.createElement('a');
                            excelLink.href = excelUrl;
                            excelLink.setAttribute('download', `${response.filename_prefix}.xlsx`);
                            document.body.appendChild(excelLink);
                            excelLink.click();
                            document.body.removeChild(excelLink);
                        }
                    },
                    error: function(error) {
                        console.error("Error exporting Excel:", error);
                        alert("Error exporting Excel. Please try again.");
                    }
                });
            });
        });
    </script>
</body>
</html>